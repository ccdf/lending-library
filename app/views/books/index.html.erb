<header class="page-header">
  <h1>Library <%= link_to 'Add a book', new_book_path, class: 'btn btn-success pull-sm-right' %></h1>

  <%= form_tag(books_path, :method => "get", id: "search-form") do %>
  <label for="s" class="sr-only">Search books</label>
  <%= text_field_tag :search, params[:search], id: "s", placeholder: "Search books...", class: 'form-control' %>
  <% end %>
</header>
<br/><br/>

<% if @books.present? %>
  <% @books.each do |book| %>
    <div class="book-item">
      <% if get_availability(book) %>
      <%= link_to 'Checkout', checkouts_path(book: book), method: :post, data: { confirm: "Are you sure you would like to checkout #{book.title}?" }, class: 'btn btn-sm btn-primary pull-sm-right' %>
      <% else %>
      <label class="label label-danger pull-sm-right">Checked out by <%= book.checkout.user.profile.name %> on <%= book.checkout.checkout_date %></label>
      <% end %>
      <%= image_tag book.book_image, class: 'img pull-sm-left' %>
      <h4><%= link_to book.title, book.url, target: '_blank' %></h4>
      <span><%= book.author %></span><br/>
      <small>Owned by: <%= book.user.profile.name %></small><br/>
    </div>
  <% end %>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>
